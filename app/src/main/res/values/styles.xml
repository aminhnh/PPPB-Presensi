<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/spinner_bg</item>
    </style>
    <style name="CustomTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/grey2</item>
        <item name="android:textColorHint">@color/grey3</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>
    <style name="CustomTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
    </style>
</resources>